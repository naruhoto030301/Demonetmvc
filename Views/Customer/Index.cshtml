@model IEnumerable<NguyenVietPhuongBTH2.Models.Customer>
<p>
    <a class="btn btn-success" asp-action="Create">Create a Customer</a>
    <a class="btn btn-success" asp-action="Upload">Upload Customers</a>

</p>
<table class="table table-all">
    <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.CustomerID)</td>
            <td>@Html.DisplayFor(m => item.CustomerName)</td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-success">Sửa</a>
                <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
</table>